---
const currentDate = new Date().toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<div class="page-date">
    <time datetime={new Date().toISOString()}>{currentDate}</time>
</div>

<style>
    .page-date {
        text-align: center;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        color: #FFB800;
        font-size: 0.875rem;
    }
</style>